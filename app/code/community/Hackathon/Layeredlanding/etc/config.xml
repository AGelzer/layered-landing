<?xml version="1.0"?>
<config>
    <modules>
        <Hackathon_Layeredlanding>
            <version>0.2.0</version>
        </Hackathon_Layeredlanding>
    </modules>
    <frontend>
        <routers>
            <layeredlanding>
                <use>standard</use>
                <args>
                    <module>Hackathon_Layeredlanding</module>
                    <frontName>layeredlanding</frontName>
                </args>
            </layeredlanding>
        </routers>
		<layout>
			<updates>
				<layeredlanding>
					<file>layeredlanding.xml</file>
				</layeredlanding>
			</updates>
		</layout>
    </frontend>
    <admin>
        <routers>
			<adminhtml>
				<args>
					<modules>
						<layeredlanding before="Mage_Adminhtml">Hackathon_Layeredlanding_Adminhtml</layeredlanding>
					</modules>
				</args>
			</adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <menu>
			<catalog>
				<children>
					<attributes>
						<children>
							<layeredlanding module="layeredlanding">
								<title>Attribute landing pages</title>
								<sort_order>99</sort_order>               
								<action>adminhtml/layeredlanding</action>
							</layeredlanding>
						</children>
					</attributes>
				</children>
			</catalog>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
						<catalog>
							<children>
								<attributes>
									<children>
										<layeredlanding>
											<title>Attribute landing pages</title>
											<sort_order>99</sort_order>
										</layeredlanding>
									</children>
								</attributes>
							</children>
						</catalog>
					</children>
				</admin>
			</resources>
        </acl>
        <layout>
            <updates>
                <layeredlanding>
                    <file>layeredlanding.xml</file>
                </layeredlanding>
            </updates>
        </layout>
    </adminhtml>   
    <global>
        <models>
            <layeredlanding>
                <class>Hackathon_Layeredlanding_Model</class>
                <resourceModel>layeredlanding_mysql4</resourceModel>
            </layeredlanding>
            <layeredlanding_mysql4>
                <class>Hackathon_Layeredlanding_Model_Mysql4</class>
                <entities>
                    <layeredlanding>
                        <table>layeredlanding</table>
                    </layeredlanding>
                    <attributes>
                        <table>layeredlanding_attributes</table>
                    </attributes>
                </entities>
            </layeredlanding_mysql4>
        </models>
        <resources>
            <layeredlanding_setup>
                <setup>
                    <module>Hackathon_Layeredlanding</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </layeredlanding_setup>
            <layeredlanding_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </layeredlanding_write>
            <layeredlanding_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </layeredlanding_read>
        </resources>
        <blocks>
            <layeredlanding>
                <class>Hackathon_Layeredlanding_Block</class>
            </layeredlanding>
        </blocks>
        <helpers>
            <layeredlanding>
                <class>Hackathon_Layeredlanding_Helper</class>
            </layeredlanding>
        </helpers>
    </global>
</config>